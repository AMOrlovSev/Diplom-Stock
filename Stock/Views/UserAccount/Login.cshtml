@model Stock.Models.VM.LoginUser

@{
    ViewData["Title"] = "Вход";
}

<h1>Вход</h1>
@* 
<h4>LoginUser</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginOrEmail" class="control-label"></label>
                <input asp-for="LoginOrEmail" class="form-control" />
                <span asp-validation-for="LoginOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Вход" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    Нет аккаунта? <a asp-action="Registration">Зарегистрируйтесь</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
