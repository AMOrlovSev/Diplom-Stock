@model Stock.Models.StockActive

@{
    ViewData["Title"] = "Активы|Править";
}

<h4>Актив</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StockActiveID" />
            <input type="hidden" asp-for="PortfolioID" />
            <input type="hidden" asp-for="SecID" />

            <div class="form-group">
                <label asp-for="Portfolio.PortfolioName" class="control-label"></label>
                <select asp-for="PortfolioID" class="form-control" asp-items="ViewBag.PortfolioID" aria-label="Disabled select example" disabled></select>
                <span asp-validation-for="PortfolioID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StockInformation.ShortName" class="control-label"></label>
                <select asp-for="SecID" class="form-control" asp-items="ViewBag.StockInformation" aria-label="Disabled select example" disabled></select>
            </div>

            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Внимание!</b> - @TempData["Error"]</span>
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
